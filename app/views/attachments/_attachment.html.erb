<tr id="<%= dom_id attachment %>">
  <% if current_user.admin? %>
    <td>
      <%= attachment.user.email %>
    </td>
  <% end %>
  <td scope="row">
    <%= link_to attachment.file_identifier, attachment %>
  </td>
  <td><%=  link_to 'File(uploaded)', file_download_attachment_path(attachment) %></td>
  <td>
    <%- if attachment.file_processed.present? %>
      <%= link_to 'File(invoices error)', file_processed_download_attachment_path(attachment) %>
    <% end %>
  </td>
  <td><%= attachment.file_identifier %></td>
  <td><%= attachment.description %></td>
  <td><%= l(attachment.created_at) %></td>
  <td>
    <%= link_to "Delete", attachment, data: { "turbo-method": :delete } %>
  </td>
</tr>
